<% @corpus_entries = CorpusEntry.page(params[:page]) %>

<div class="container-fluid">  
  <div id="about_jumbotron" class="jumbotron">
    <h1 id="about_heading">The Corpus Explorer</h1>
    <p id="about_text">A university corpus of student documents from the technical communication field.</p>
  </div>
    <div class="row">
    <div class="col-lg-9 col-lg-offset-3">
</div>
  </div>

  <div class="row">
    <div class="col-lg-3">

      </div>
        <div class="col-lg-9">
    <% @corpus_entries.each do |corpus_entry| %>
          <div class="panel">
           <div class="row entry_row_heading">
            <div class="col-xs-12 col-lg-12">
              <ul class="list-inline">
                <li id="entry_number"><h5><%= corpus_entry.entry_number %></h4></li>
                <li id="entry_genre"><h4><%= corpus_entry.genre %></h4></li>
                <li id="entry_format"><h5><%= corpus_entry.format %></h5></li>
             </ul>
            </div>
           </div>
           <div class="row">
            <div class="col-xs-6 col-lg-4">
              <div class="deliverable_group">
                <h5><%= corpus_entry.deliverable %></h5>
                <p><%= corpus_entry.classification %></p>
                <p><%= corpus_entry.deadline %> deadline</p>
                <p>Grade <%= corpus_entry.grade %></p>
              </div>
            </div>
            <div class="col-xs-6 col-lg-4">
              <h5><%= corpus_entry.student_level %> student</h5>
              <p>Major <%= corpus_entry.student_major %></p>
              <p>Age <%= corpus_entry.student_age %></p>
              <p>Gender <%= corpus_entry.student_gender %></p>
              <p>Ethnicity <%= corpus_entry.student_ethnicity %></p>
            </div>
            <div class="col-xs-12 col-lg-4">
              <h5>Course <%= corpus_entry.course_number %> Section <%= corpus_entry.course_section %></h5>
              <p>Instructor <%= corpus_entry.instructor %></p>
              <p><%= corpus_entry.course_day %> <%= corpus_entry.course_time %>, <%= corpus_entry.course_year %></p>           
            </div> 
           </div>
          </div>
      <% end %>
    </div>
  </div>
  <%= will_paginate @corpus_entries %>
</div>

                   